<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Back button -->
    <TextView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← Back"
        android:textSize="16sp"
        android:textColor="#007FFF"
        android:layout_gravity="start"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Text informing user that reset code has been sent -->
    <TextView
        android:id="@+id/resetCodeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="A reset code has been sent to your registered email address"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000" />

    <!-- Reset code input field -->
    <EditText
        android:id="@+id/resetCodeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Reset code"
        android:inputType="number"
        android:padding="16dp"
        android:background="@drawable/rounded_edit_text" />

    <!-- New password input field -->
    <EditText
        android:id="@+id/newPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Create new password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:background="@drawable/rounded_edit_text" />

    <!-- Confirm password input field -->
    <EditText
        android:id="@+id/confirmPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:background="@drawable/rounded_edit_text" />

    <!-- Reset button -->
    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="RESET"
        android:background="@drawable/outline_button"
        android:textColor="#000000" />

    <!-- Resend code link -->
    <TextView
        android:id="@+id/resendCodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Resend Code"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#007FFF"
        android:textStyle="bold" />
</LinearLayout>
